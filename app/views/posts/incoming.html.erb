<% if @error_message %>
<%=@error_message%>
<%end%>
<h3>
<%= link_to("支出","/outgoing",{class:"btn btn-lg"}) %>
<%= link_to("収入","/incoming",{class:"btn btn-primary"}) %>
</h3>
<%= form_with url:posts_in_url do |f| %>
  <%= f.label "日付:" %>
  <%= f.date_field :date, class:"form-control" %>
  <br>
  <%= f.label "メモ:" %>
  <%= f.text_field :memo, class:"form-control" %>
  <br>
  <%= f.label "収入:" %>
  <%= f.number_field :incoming, value:0 , class:"form-control"%>円
  <br>
  <br>
  <%= f.label "カテゴリー" %>
  <% @in_categories.each do |category| %>
    <div class="form-check form-check-inline">
      <%= f.radio_button :category ,category.id %>
      <%= f.label :category, category.name %>
    </div>
  <%end%>
  <br>
  <a href='/posts/category'>カテゴリーを追加</a>
  <br>
  <br>
  <%= f.submit "入力" %>
<% end %>
